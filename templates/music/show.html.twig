{% extends 'base.html.twig' %}

{% block title %}{{showmusic.title}}{% endblock %}
{% block button %}
  <form action="/loggedout" method="post" class="inline-form">
    <input type="submit" value="Logout" class="buttons">
  </form>
{% endblock %}
{% block body %}
  <body class="showmusic-body" style="background-image: url('{{showmusic.imgPath}}')">
    <div class="container">
      <div class="showmusic">
        <span id="fav" onclick="liked()">
          <a href="/addtofav/{{showmusic.uid}}"> 
            {% if exist is defined %}
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40"  id="heartIcon" fill="red" class="bi bi-heart" viewBox="0 0 16 16">
                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
              </svg>
            {% else %}
              <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40"  id="heartIcon" fill="white" class="bi bi-heart" viewBox="0 0 16 16">
                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
              </svg>
            {% endif %}
          </a>
        </span>
        <div class="imagediv">
          <img src="{{showmusic.imgPath}}" alt="img" id="image">
          <div class="circle"></div>
        </div>
        <h1>{{showmusic.title}}</h1>
        <h4>{{showmusic.subtitle}}</h4>
        <audio id="player">
          <source src="{{showmusic.songPath}}" type="audio/mpeg">
        </audio>
        <div>
          <svg id="playbtn" onclick = "playBtn()" xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="white" class="bi bi-play-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.79 5.093A.5.5 0 0 0 6 5.5v5a.5.5 0 0 0 .79.407l3.5-2.5a.5.5 0 0 0 0-.814l-3.5-2.5z"/>
          </svg>
          <svg id="pausebtn" onclick = "pauseBtn()" xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="white" class="bi bi-pause-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.25 5C5.56 5 5 5.56 5 6.25v3.5a1.25 1.25 0 1 0 2.5 0v-3.5C7.5 5.56 6.94 5 6.25 5zm3.5 0c-.69 0-1.25.56-1.25 1.25v3.5a1.25 1.25 0 1 0 2.5 0v-3.5C11 5.56 10.44 5 9.75 5z"/>
          </svg>
        </div>


      </div>
    </div>
  </body>


  <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
  <script>
    function playBtn() {
    document.getElementById('player').play(); 
    $('#playbtn').css('display','none'); 
    $('#pausebtn').css('display','block');

    document.getElementById('image').classList.add("animate");
    }

    function pauseBtn() {
    document.getElementById('player').pause(); 
    $('#playbtn').css('display','block'); 
    $('#pausebtn').css('display','none');

    document.getElementById('image').classList.remove("animate");
    }

  </script>
{% endblock %}



 